{% extends 'base.html.twig' %}

{% block body %}

<div class="padding-y-60 bg-cover" data-dark-overlay="6" style="background:url(/front/assets/img/breadcrumb-bg.jpg) no-repeat">
  <div class="container">
   <div class="row align-items-center">
     <div class="col-lg-6 my-2 text-white">
      <ol class="breadcrumb breadcrumb-double-angle bg-transparent p-0">  
        <li class="breadcrumb-item"><a href="page-sp-all-courcess.html#">Accueil</a></li>
        <li class="breadcrumb-item"><a href="page-sp-all-courcess.html#">Cours</a></li>
        <li class="breadcrumb-item">Data Artisan</li>
      </ol>
      <h2 class="h1">
        Data Artisan
      </h2>
      <p class="lead">
        <span class="text-primary">6,178</span> cours
      </p>
     </div>
   </div>
  </div>
</div>


<section class="padding-y-60 bg-light-v2">
  <div class="container">
    <div class="row">
      {% for cour in cours %}
        {% if cour.module.filiere.libelle == 'Data Artisan'%}
          <div class="col-lg-4 col-md-6 marginTop-30">
            <div href="page-course-details.html" class="card height-100p text-gray shadow-v1">
              <img class="card-img-top" src="/front/assets/img/360x220/1.jpg" alt="">
              <div class="card-body">
                {% if cour.typecour.libelle == 'Cours' %}
                  <span class="badge position-absolute top-0 bg-success text-white" data-offset-top="-13" style="margin-top: -13px;">
             {{ cour.typecour.libelle }}
           </span>
                {% elseif cour.typecour.libelle == 'Tuto' %}
                  <span class="badge position-absolute top-0 bg-danger text-white" data-offset-top="-13" style="margin-top: -13px;">
             {{ cour.typecour.libelle }}
           </span>
                {% endif %}
                <a href="page-sp-all-courcess.html#" class="h5">
                  {{ cour.libelle }}
                </a>
                <p class="my-3">
                  <i class="ti-user mr-2"></i>
                  {{ cour.module.libelle }}
                </p>
                <p class="mb-0">
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <span class="text-dark">5</span>
                  <span>(4578)</span>
                </p>
              </div>
              <div class="card-footer media align-items-center justify-content-between">
                <ul class="list-unstyled mb-0">
                  <li class="mb-1">
                    <i class="ti-headphone small mr-2"></i>
                    46 lectures
                  </li>
                  <li class="mb-1">
                    <i class="ti-time small mr-2"></i>
                    27.5 hours
                  </li>
                </ul>
                <h4 class="h5 text-right">
                  <span class="text-primary">$180</span>
                </h4>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
      
      <div class="col-12 marginTop-70">
        <ul class="pagination pagination-primary justify-content-center">
          <li class="page-item mx-1">
            <a class="page-link iconbox iconbox-sm rounded-0" href="page-sp-all-courcess.html#">
              <i class="ti-angle-left small"></i>
            </a>
          </li>
          <li class="page-item mx-1">
            <a class="page-link iconbox iconbox-sm rounded-0" href="page-sp-all-courcess.html#">1</a>
          </li>
          <li class="page-item active disabled mx-1">
            <a class="page-link iconbox iconbox-sm rounded-0" href="page-sp-all-courcess.html#">2</a>
          </li>
          <li class="page-item mx-1">
            <a class="page-link iconbox iconbox-sm rounded-0" href="page-sp-all-courcess.html#">3</a>
          </li>
          <li class="page-item disabled mx-1">
            <a class="page-link iconbox iconbox-sm rounded-0" href="page-sp-all-courcess.html#">
              <i class="ti-more-alt"></i>
            </a>
          </li>
          <li class="page-item mx-1">
            <a class="page-link iconbox iconbox-sm rounded-0" href="page-sp-all-courcess.html#">16</a>
          </li>
          <li class="page-item mx-1">
            <a class="page-link iconbox iconbox-sm rounded-0" href="page-sp-all-courcess.html#">
              <i class="ti-angle-right small"></i>
            </a>
          </li>
        </ul>
      </div>
    </div> <!-- END row-->
  </div> <!-- END container-->
</section>
{% endblock %}