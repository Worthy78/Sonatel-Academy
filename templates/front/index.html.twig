             <p>
               HTML Pages
             </p>
           </div>
         </div>
         
       </div> <!-- END row-->
     </div> <!-- END container-->
   <div id="jarallax-container-0" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; pointer-events: none; z-index: -100;"><div style="background-position: 50% 50%; background-size: cover; background-repeat: no-repeat; background-image: url(&quot;file:///var/www/project/Sonatel%20Academy/educati/assets/img/1920x800/4.jpg&quot;); position: fixed; top: 0px; left: 0px; width: 1351px; height: 1007px; overflow: hidden; pointer-events: none; margin-top: -318px; transform: translate3d(0px, 106px, 0px);"></div></div></section>
<section class="padding-y-100" data-primary-overlay="7" style="background:url(/front/assets/img/1920/962.jpg) no-repeat">
  <div class="container">
    <div class="row">
     
      <div class="col-12 text-center text-white mb-md-4">
        <h2 class="mb-4">
          Événements à venir
        </h2>
        <div class="width-3rem height-4 rounded bg-white mx-auto"></div>
      </div>
      {% for event in events|slice(0, 3) %}
      <div class="col-md-4 mt-4">
        <div class="card">
          <img class="card-img-top" src="/uploads/events/{{ event.photo }}" alt="">
          <div class="card-body">
            <h4 class="h5">
              {{ event.libelle }}
            </h4>
            <ul class="list-unstyled my-4 line-height-xl">
              <li>
                 <i class="ti-time mr-2 text-primary"></i>
                {{ event.date|date("m/d/Y")  }} à {{ event.date|date("H:m") }}
              </li>
              <li>
                 <i class="ti-location-pin mr-2 text-primary"></i>
                 {{ event.lieu }}
              </li>
            </ul>
            <a href="index-university.html#" class="text-primary">
              Voir details
              <i class="ti-angle-double-right small"></i>
            </a>
          </div>
        </div>
      </div>{% endfor %} <!-- END col-md-4-->
      <div class="col-12 mt-5 text-center">
        <a href="index-university.html#" class="btn btn-outline-white-hover">Plus d'événements</a>
      </div>
    </div> <!-- END row-->
  </div> <!-- END container-->
</section>


<section class="padding-y-100 bg-cover" data-dark-overlay="6" style="background:url(/front/assets/img/college/2.jpg) no-repeat">
  <div class="container">
    <div class="row text-center text-white">
     
      <div class="col-lg-3 col-md-6 mt-5 wow zoomIn" data-wow-delay=".1s" style="visibility: visible; animation-delay: 0.1s; animation-name: zoomIn;">
        <p class="ec-counter display-4 text-primary font-weight-semiBold mb-0" data-to="520" data-speed="3000">520</p>
        <p class="lead">
          Online Courses
        </p>
      </div>
     
      <div class="col-lg-3 col-md-6 mt-5 wow zoomIn" data-wow-delay=".2s" style="visibility: visible; animation-delay: 0.2s; animation-name: zoomIn;">
        <p class="ec-counter display-4 text-primary font-weight-semiBold mb-0" data-to="690" data-speed="3000">690</p>
        <p class="lead">
          Trusted Tutors
        </p>
      </div>
     
      <div class="col-lg-3 col-md-6 mt-5 wow zoomIn" data-wow-delay=".3s" style="visibility: visible; animation-delay: 0.3s; animation-name: zoomIn;">
        <p class="ec-counter display-4 text-primary font-weight-semiBold mb-0" data-to="485645" data-speed="3000">485645</p>
        <p class="lead">
          Online Students
        </p>
      </div>
     
      <div class="col-lg-3 col-md-6 mt-5 wow zoomIn" data-wow-delay=".4s" style="visibility: visible; animation-delay: 0.4s; animation-name: zoomIn;">
        <p class="ec-counter display-4 text-primary font-weight-semiBold mb-0" data-to="5409" data-speed="3000">5409</p>
        <p class="lead">
          Success Stories
        </p>
      </div>
      
    </div> <!-- END row-->
  </div> <!-- END container-->
</section>

<section class="paddingTop-70 paddingBottom-100 bg-light-v3">
  <div class="container">
    <div class="row text-center align-items-center">
      {% for partenaire in partenaires %}
      <div class="col-lg-3 col-sm-4 marginTop-30">
      <a href="{{ partenaire.link }}" target="_blank">
        <img src="/uploads/partenaire/{{ partenaire.photo }}" alt="{{ partenaire.libelle }}" style="width:80px; height: 80px; margin: 0">
        </a>
      </div>
   {% endfor %}
    </div> <!-- END row-->
  </div> <!-- END container--> 
</section>





<section class=" padding-y-100 bg-black-0_9">
    <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-5 mr-auto my-4 text-white wow slideInUp" style="visibility: visible; animation-name: slideInUp;">
        <h2>S'inscrire à notre <span class="text-primary">Newsletter</span></h2>
        <p class="lead">
          Rester informé de tout ce qui passe à l'academy
        </p>
      </div>
      <div class="col-md-6 my-4 wow zoomIn" style="visibility: visible; animation-name: zoomIn;">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text ti-email bg-white"></div>
        </div>
        <input type="text" placeholder="Entrer votre email" class="form-control py-3 pl-0 border-white" required="">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">S'inscrire</button>
        </div>
      </div>
      </div>
    </div> <!-- END row-->
    </div>
  </section>
