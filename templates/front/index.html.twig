{% extends 'base.html.twig' %}

{% block body %}
<section class="padding-y-100 flex-center jarallax height-100vh" data-dark-overlay="5" style="background: none no-repeat;" data-jarallax-original-styles="background:url(/front/assets/img/1920x800/4.jpg) no-repeat">
     <div class="container">
       <div class="row">
         <div class="col-12 text-center text-white marginBottom-80">
           <h1 class="display-md-2 font-weight-bold">Sonatel 
