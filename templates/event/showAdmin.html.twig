{% extends 'layout.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>{{ event.libelle }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ event.photo }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ event.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_new') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
