<div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="">Inscription</h3>
                            </div>
                            <div class="panel-body">
                                <div>
                                    <section>
                                        {{ form_start(form, {'attr': {'class': '', 'id': 'formAddFournis'}}) }} 

                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label>Prenom<i class="fa fa-file i"></i></label>
                                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                                </div>
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label> Nom <i class="fa fa-file"></i></label>
                                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}, 'required': false}) }}
                                                </div>
                                            </div>

                                             <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label>Adresse<i class="fa fa-home i"></i></label>
                                                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                                                </div>
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label> Téléphone <i class="fa fa-phone"></i></label>
                                                    {{ form_widget(form.tel, {'attr': {'class': 'form-control'}, 'required': false}) }}
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label>Date de naissance<i class="fa fa-calendar"></i></label>
                                                    {{ form_widget(form.dateNaiss, {'attr': {'class': 'form-control'}}) }}
                                                </div>
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label> Sexe <i class="glyphicon  md-sort"></i></label>
                                                    {{ form_widget(form.sexe, {'attr': {'class': 'form-control'}, 'required': false}) }}
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label>Photo<i class="md-photo"></i></label>
                                                    {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                                                </div>
                                                <div class="col-md-1"></div>
                                                <div class="form-group col-md-5">
                                                    <label>Adresse mail <i class="fa fa-envelope i"></i></label>
                                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}, 'required': false}) }}
                                                </div>
                                            </div>

                                            <div class="enrigis panel-footer"> 
                                                <button type="submit" class="btn btn-primary">Enregistrer</button> 
                                                <button type="reset" class="btn btn-danger waves-effect">Annuler</button> 
                                            </div>
                                        {{ form_end(form) }}
                                    </section>
                                </div>
                            </div>  <!-- End panel-body -->
                        </div> <!-- End panel -->
                    </div> <!-- end col -->
                </div> <!-- End row -->
            </div>
{% endblock %}
